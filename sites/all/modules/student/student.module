/* fetch results from student interview/resume request */

function student_request_result($id, $table) {
    $stud_int_res = db_select($table)
            ->fields($table)
            ->condition('id', $id, '=')
            ->orderBy('id', 'DESC')
            ->execute()
            ->fetchAssoc();
    return $stud_int_res;
}

